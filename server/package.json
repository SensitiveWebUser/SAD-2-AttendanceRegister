{
  "name": "attendanceregister-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "test": "jest -i --watchAll --no-cache",
    "test:ci": "jest -i --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "@Routes/(.*)": [
        "<rootDir>/src/routes/$1"
      ],
      "@Middlewares": [
        "<rootDir>/src/middlewares/index.ts"
      ],
      "@Errors": [
        "<rootDir>/src/errors/index.ts"
      ],
      "@Errors/(.*)": [
        "src/errors/$1"
      ],
      "@Models/(.*)": [
        "<rootDir>/src/models/$1"
      ],
      "@Utils/(.*)": [
        "<rootDir>/src/utils/$1"
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.8",
    "cookie-session": "^2.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.0",
    "mongodb-memory-server": "^8.6.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "tsconfig-paths": "^4.1.0"
  }
}
